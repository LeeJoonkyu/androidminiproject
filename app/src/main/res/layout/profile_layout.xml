<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profile_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 정보"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profile_img"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#005eff"
        />

    <ImageButton
        android:id="@+id/profile_img"
        android:layout_width="125dp"
        android:layout_height="103dp"
        app:srcCompat="@drawable/seatnova80_occupied"
        app:layout_constraintTop_toBottomOf="@+id/profile_page"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"



        />

    <TextView
        android:id="@+id/profile_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_img"
        app:layout_constraintRight_toLeftOf="@id/profile_id_et"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        />

    <EditText
        android:id="@+id/profile_id_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/profile_id"
        app:layout_constraintTop_toBottomOf="@+id/profile_img"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/profile_pw"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="비밀번호"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_id_et"
        app:layout_constraintRight_toLeftOf="@id/profile_pw_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"



        />

    <EditText
        android:id="@+id/profile_pw_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/profile_pw"
        app:layout_constraintTop_toBottomOf="@id/profile_id_et"
        app:layout_constraintRight_toLeftOf="@+id/changePwBtn"


        />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="이름"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_pw_et"
        app:layout_constraintRight_toLeftOf="@id/profile_name_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"



        />

    <EditText
        android:id="@+id/profile_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/profile_name"
        app:layout_constraintTop_toBottomOf="@id/profile_pw_et"
        app:layout_constraintRight_toRightOf="parent"



        />

    <TextView
        android:id="@+id/profile_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_name_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/profile_nickname_et"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        />

    <EditText
        android:id="@+id/profile_nickname_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/profile_nickname"
        app:layout_constraintTop_toBottomOf="@id/profile_name_et"
        app:layout_constraintRight_toLeftOf="@+id/checkChangedNickAvailable"

        />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_nickname_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/profile_email_et"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        />

    <EditText
        android:id="@+id/profile_email_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/profile_email"
        app:layout_constraintTop_toBottomOf="@id/profile_nickname_et"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/profile_phoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        android:textSize="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/profile_email_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/profile_phoneNo_et"
        />

    <EditText
        android:id="@+id/profile_phoneNo_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/profile_phoneNo"
        app:layout_constraintTop_toBottomOf="@id/profile_email_et"
        app:layout_constraintRight_toRightOf="parent"

        />


    <TextView
        android:id="@+id/profile_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 자리 정보"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_phoneNo_et"
        app:layout_constraintRight_toLeftOf="@id/profile_seat_info"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <Button
        android:id="@+id/changeUserInfoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원정보 수정"
        app:layout_constraintTop_toBottomOf="@id/profile_havruta_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/profile_seat_info"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="자리 정보"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile_phoneNo_et"
        app:layout_constraintLeft_toRightOf="@id/profile_seat"
        app:layout_constraintRight_toLeftOf="@id/seat_return"
        />


    <Button
        android:id="@+id/seat_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자리 반환"
        app:layout_constraintTop_toBottomOf="@id/profile_phoneNo_et"
        app:layout_constraintLeft_toRightOf="@id/profile_seat_info"
        app:layout_constraintRight_toRightOf="parent"

        />



    <TextView
        android:id="@+id/profile_havruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 하브루타 예약"
        app:layout_constraintTop_toBottomOf="@id/seat_return"
        app:layout_constraintRight_toLeftOf="@id/profile_havruta_info"
        app:layout_constraintLeft_toLeftOf="parent"

        android:textSize="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        />

    <TextView
        android:id="@+id/profile_havruta_info"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="하브루타 예약 정보"
        app:layout_constraintTop_toBottomOf="@id/seat_return"
        app:layout_constraintLeft_toRightOf="@id/profile_havruta"
        app:layout_constraintRight_toLeftOf="@id/havruta_return"

        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"

        />
    <Button
        android:id="@+id/havruta_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약 반환"
        app:layout_constraintTop_toBottomOf="@id/seat_return"
        app:layout_constraintLeft_toRightOf="@id/profile_havruta_info"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:id="@+id/changePwBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        app:layout_constraintLeft_toRightOf="@+id/profile_pw_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_id_et"
        />

    <TextView
        android:id="@+id/checkChangedNickAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_nickname_et"
        app:layout_constraintTop_toBottomOf="@id/profile_name_et"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>