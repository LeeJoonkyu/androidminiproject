<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/others_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대채팅시간"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/others_chat_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"

        />

    <TextView
        android:id="@+id/others_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_grey"
        android:textColor="#000000"
        android:padding="8dp"
        android:text="상대채팅내용"
        app:layout_constraintLeft_toRightOf="@+id/chat_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/chat_nickname"
        />


    <ImageButton
        android:id="@+id/chat_profile_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/seatnova55_occupied"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/chat_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대닉네임"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chat_profile_img"
        app:layout_constraintBottom_toTopOf="@+id/others_chat_view"
        />


</androidx.constraintlayout.widget.ConstraintLayout>